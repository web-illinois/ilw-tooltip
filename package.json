{
    "name": "@illinois-toolkit/ilw-tooltip",
    "description": "Ilw-tooltip is a popup that provides additional information about a user interface element, such as a button or link, when the mouse hovers over it.",
    "repository": "github:web-illinois/ilw-tooltip",
    "private": false,
    "license": "MIT",
    "version": "1.1.0",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/ilw-tooltip.js",
            "require": "./dist/ilw-tooltip.cjs",
            "default": "./dist/ilw-tooltip.js"
        }
    },
    "main": "./dist/ilw-tooltip.js",
    "module": "./dist/ilw-tooltip.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build",
        "test:axe": "playwright test",
        "test:axe:github": "playwright test --config=playwright.ci.config.ts"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "@illinois-toolkit/ilw-core": "^1.0.3",
        "@playwright/test": "^1.55.1",
        "playwright": "^1.55.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "vite-plugin-dts": "^4.5.4"
    }
}
