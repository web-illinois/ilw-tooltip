{
    "name": "@illinois-toolkit/ilw-tooltip",
    "description": "Ilw-tooltip is a popup that provides additional information about a user interface element, such as a button or link, when the mouse hovers over it.",
    "repository": "github:web-illinois/ilw-tooltip",
    "private": false,
    "license": "MIT",
    "version": "1.0.0",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./src/ilw-tooltip.js",
            "require": "./dist/ilw-tooltip.cjs",
            "default": "./dist/ilw-tooltip.js"
        }
    },
    "main":"./dist/ilw-tooltip.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build --config vite.build.config.js --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "vite": "^5.4.11"
    }
}